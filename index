<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>6 Green Newsletter</title>
    <style>
        body { font-family: Arial, sans-serif; line-height: 1.6; margin: 0; padding: 20px; }
        nav { margin-bottom: 20px; }
        button { margin-right: 10px; padding: 5px 10px; }
    </style>
</head>
<body>
    <header>
        <h1>6 Green Newsletter</h1>
        <nav id="newsletter-nav"></nav>
    </header>
    <main>
        <div id="newsletter-content"></div>
    </main>

    <script>
    // Use an IIFE to avoid polluting the global scope
    (function() {
        'use strict';

        const CANVA_URL = 'https://www.canva.com/design/DAGN_OghJQo/k5ifeZXWfik0FME79_JxLw/view?utm_content=DAGN_OghJQo&utm_campaign=designshare&utm_medium=link&utm_source=editor';
        
        // Sample data - in a real application, this would come from an API or database
        const newsletters = [
            { id: '2023-08-18', title: 'August 18, 2023' },
            { id: '2023-08-25', title: 'August 25, 2023' },
            { id: '2023-09-01', title: 'September 1, 2023' }
        ];

        function populateNavigation() {
            const nav = document.getElementById('newsletter-nav');
            newsletters.forEach(newsletter => {
                const button = document.createElement('button');
                button.textContent = newsletter.title;
                button.addEventListener('click', () => displayNewsletter(newsletter.id));
                nav.appendChild(button);
            });
        }

        function displayNewsletter(id) {
            const newsletter = newsletters.find(n => n.id === id);
            if (newsletter) {
                const content = document.getElementById('newsletter-content');
                content.innerHTML = `
                    <h2>${newsletter.title}</h2>
                    <p>Content for ${newsletter.title}</p>
                    <a href="${CANVA_URL}" target="_blank" rel="noopener noreferrer">View Newsletter on Canva</a>
                `;
            }
        }

        // Initialize the page
        function init() {
            populateNavigation();
            // Display the most recent newsletter by default
            if (newsletters.length > 0) {
                displayNewsletter(newsletters[0].id);
            }
        }

        // Ensure the DOM is fully loaded before initializing
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', init);
        } else {
            init();
        }
    })();
    </script>
</body>
</html>
